<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--工厂建模-->
    <menuitem id="erp2oa_main_menu" name="协同设置" sequence="30" groups="base.group_user"/>

    <menuitem id="erp2oa_model_menu" name="同步设置" sequence="10" parent="erp_oa_addons.erp2oa_main_menu"
              action="view_erp2oa_erp_model_action" groups="base.group_user"/>
    <menuitem id="erp2oa_system_menu" name="ERP系统" sequence="20" parent="erp_oa_addons.erp2oa_main_menu"
              action="view_erp2oa_system_action" groups="base.group_user"/>
<!--    <menuitem id="erp2oa_system_log_menu" name="同步日志" sequence="30" parent="erp_oa_addons.erp2oa_main_menu"-->
<!--              action="view_erp2oa_system_log_action" groups="base.group_user"/>-->

    <menuitem id="erp2oa_setting_menu" name="设置" sequence="50" parent="erp_oa_addons.erp2oa_main_menu"
              groups="base.group_user"/>
    <menuitem id="erp2oa_ljbm_menu" name="同步ERP业务ID" sequence="10" parent="erp_oa_addons.erp2oa_setting_menu"
              action="view_erp2oa_erp_ljbm_action" groups="base.group_user"/>
    <menuitem id="erp2oa_models_menu" name="同步ERP业务模块" sequence="20" parent="erp_oa_addons.erp2oa_setting_menu"
              action="view_erp2oa_erp_models_action" groups="base.group_user"/>
    <menuitem id="erp2oa_table_field_menu" name="同步ERP表字段" sequence="30" parent="erp_oa_addons.erp2oa_setting_menu"
              action="view_erp2oa_erp_table_field_action" groups="base.group_user"/>
<!--    <menuitem id="erp2oa_users_menu" name="ERP同步用户" sequence="40" parent="erp_oa_addons.erp2oa_setting_menu"-->
<!--              action="view_erp2oa_users_action" groups="base.group_user"/>-->

    <record id="view_roke_mes_inherit_ir_module_search" model="ir.ui.view">
        <field name="name">roke.mes.inherit.ir.module.search</field>
        <field name="model">ir.module.module</field>
        <field name="inherit_id" ref="base.view_module_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='not_installed']" position="after">
                <separator/>
                <filter name="erp2oa" string="协同中心" domain="[('name', 'ilike', 'erp_oa'), ('application', '=', True)]"/>
            </xpath>
        </field>
    </record>
    <record id="base.open_module_tree" model="ir.actions.act_window">
        <field name="context">{'search_default_erp2oa': 1}</field>
    </record>

</odoo>
