<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--ERP登录日志-->
    <record id="view_roke_mes_erp_login_log_search" model="ir.ui.view">
        <field name="name">roke.mes.erp.login.log.search</field>
        <field name="model">roke.mes.erp.login.log</field>
        <field name="arch" type="xml">
            <search string="ERP登录日志">
                <field name="user_id"/>
                <field name="nonce"/>
                <filter string="登录成功" name="success" domain="[('state', '=', 'success')]"/>
                <filter string="登录失败" name="failed" domain="[('state', '=', 'failed')]"/>
            </search>
        </field>
    </record>
    <!--tree-->
    <record id="view_roke_mes_erp_login_log_tree" model="ir.ui.view">
        <field name="name">roke.mes.erp.login.log.tree</field>
        <field name="model">roke.mes.erp.login.log</field>
        <field name="arch" type="xml">
            <tree string="ERP登录日志">
                <field name="user_id"/>
                <field name="nonce"/>
                <field name="state"/>
                <field name="create_date" string="登录时间"/>
            </tree>
        </field>
    </record>
    <!--action-->
    <record id="view_roke_mes_erp_login_log_action" model="ir.actions.act_window">
        <field name="name">ERP登录日志</field>
        <field name="res_model">roke.mes.erp.login.log</field>
        <field name="view_mode">tree</field>
        <field name="type">ir.actions.act_window</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_success': True, 'create': False, 'edit': False}</field>
    </record>

</odoo>
